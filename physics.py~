class PlayerPhysics(object):
    def __init__(self):
        pass

    def update(self, event):
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_RIGHT:
                self.game_object.dx = self.ACCELERATION
                self.game_object.current_action = objects.Actions.WALK
                self.game_object.x_flip = False
            elif event.key == pygame.K_LEFT:
                self.game_object.dx = -self.ACCELERATION
                self.game_object.current_action = objects.Actions.WALK
                self.game_object.x_flip = True
            elif event.key == pygame.K_UP:
                pass
            elif event.key == pygame.K_DOWN:
                pass
            
            if event.key in self.AVAILABLE_KEYS["MOVE"]:
                self.game_object.keys_down.append(event.key)
        elif event.type == pygame.KEYUP:
            if event.key in self.game_object.keys_down:
                self.game_object.keys.remove(event.key)
            
            if event.key == pygame.K_RIGHT:
                if self.MOVE_KEYS_DOWN.__len__() == 0:
                    self.game_object.dx = 0
                    self.game_object.current_action = objects.Actions.STAND
            elif event.key == pygame.K_LEFT:
                if self.MOVE_KEYS_DOWN.__len__() == 0:
                    self.game_object.dx = 0
                    self.game_object.current_action = objects.Actions.STAND
            elif event.key == pygame.K_UP:
                pass
            elif event.key == pygame.K_DOWN:
                pass
